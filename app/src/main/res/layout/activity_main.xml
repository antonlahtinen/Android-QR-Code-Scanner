<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/labelMyLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="My Latitude:"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="N/A"
        app:layout_constraintBaseline_toBaselineOf="@id/labelMyLatitude"
        app:layout_constraintStart_toEndOf="@id/labelMyLatitude"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelMyLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="My Longitude:"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelMyLatitude" />

    <TextView
        android:id="@+id/myLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="N/A"
        app:layout_constraintBaseline_toBaselineOf="@id/labelMyLongitude"
        app:layout_constraintStart_toEndOf="@id/labelMyLongitude"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelQrLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="QR Latitude:"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelMyLongitude" />

    <TextView
        android:id="@+id/qrCodeLatitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="N/A"
        app:layout_constraintBaseline_toBaselineOf="@id/labelQrLatitude"
        app:layout_constraintStart_toEndOf="@id/labelQrLatitude"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelQrLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="QR Longitude:"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelQrLatitude" />

    <TextView
        android:id="@+id/qrCodeLongitude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="N/A"
        app:layout_constraintBaseline_toBaselineOf="@id/labelQrLongitude"
        app:layout_constraintStart_toEndOf="@id/labelQrLongitude"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Distance:"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelQrLongitude" />

    <TextView
        android:id="@+id/distanceBetween"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="N/A"
        app:layout_constraintBaseline_toBaselineOf="@id/labelDistance"
        app:layout_constraintStart_toEndOf="@id/labelDistance"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/scanButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Scan QR Code"
        android:backgroundTint="#6200EA"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
